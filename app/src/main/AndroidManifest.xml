<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inkscapemobile">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InkscapeMobile">
        <activity android:name=".activities.ExportingActivity"></activity>
        <activity android:name=".activities.ProjectCreationActivity" />
        <activity android:name=".activities.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DrawingActivity"
            android:label="@string/title_activity_drawing"
            android:screenOrientation="sensor"
            android:theme="@style/Theme.InkscapeMobile.NoActionBar" />
    </application>

</manifest>