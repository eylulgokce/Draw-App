<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/secondary_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/layer_toggle_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/top_layer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Top Layer" />

        <RadioButton
            android:id="@+id/middle_layer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Middle Layer" />

        <RadioButton
            android:id="@+id/bottom_layer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Bottom Layer" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:minWidth="100dp"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/top_layer_visibility"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:minHeight="20dp"
            android:text="Visibility"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textOff="Not Visible"
            android:textOn="Visible" />

        <ToggleButton
            android:id="@+id/middle_layer_visibility"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:checked="true"
            android:minHeight="20dp"
            android:text="Visibility"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textOff="Not Visible"
            android:textOn="Visible" />

        <ToggleButton
            android:id="@+id/bottom_layer_visibility"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:checked="true"
            android:minHeight="20dp"
            android:text="Visibility"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textOff="Not Visible"
            android:textOn="Visible" />

    </LinearLayout>
</LinearLayout>